<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="right"
    android:background="#80dedede"
    android:orientation="vertical"
    tools:context="com.wondercars.ridetracker.Activity.ExecutiveListActivity">
    <include
        layout="@layout/common_toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right|bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recy_view_executives"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

            <com.wondercars.ridetracker.CustomClasses.MuseosanNormalTextView
                android:visibility="gone"
                android:id="@+id/tv_no_executivesfind"
                style="@style/text_style_black_normal_24dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="No Executives Found" />
        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_add_executives"
            android:layout_width="@dimen/size_60dp"
            android:layout_height="@dimen/size_60dp"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="@dimen/size_50dp"
            android:layout_marginRight="@dimen/size_50dp"
            android:layout_weight="1"
            android:src="@drawable/ic_add"
            app:backgroundTint="@color/colorPrimaryDark" />
    </FrameLayout>
</LinearLayout>
