<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80dedede"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.wondercars.ridetracker.Activity.NavigationActivity">

    <include
        layout="@layout/common_toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/activity_margin_10dp"
        android:orientation="vertical"
        android:weightSum="1">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1" />

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.15"
            android:background="@drawable/blue_rectangle_with_circular_corners"
            card_view:cardCornerRadius="10dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:id="@+id/ll_track_rides"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryLight1"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:padding="@dimen/activity_margin_10dp"
                    android:src="@drawable/ic_track_ride" />

                <com.wondercars.ridetracker.CustomClasses.MuseosanBoldTextView
                    style="@style/text_style_black_normal_20dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/activity_margin_10dp"
                    android:layout_weight="0.8"
                    android:gravity="center_vertical"
                    android:text="@string/track_test_drives" />


            </LinearLayout>


        </android.support.v7.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.05" />


        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.15"
            card_view:cardCornerRadius="10dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:id="@+id/ll_manage_executives"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryLight2"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:padding="@dimen/activity_margin_10dp"
                    android:src="@drawable/ic_manage_executives" />

                <com.wondercars.ridetracker.CustomClasses.MuseosanBoldTextView
                    style="@style/text_style_black_normal_20dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/activity_margin_10dp"
                    android:layout_weight="0.8"
                    android:gravity="center_vertical"
                    android:text="@string/Manage_Executives" />


            </LinearLayout>


        </android.support.v7.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.05" />

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.15"
            card_view:cardCornerRadius="10dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:id="@+id/ll_manage_cars"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryLight3"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:padding="@dimen/activity_margin_10dp"
                    android:src="@drawable/ic_manage_cars" />


                <com.wondercars.ridetracker.CustomClasses.MuseosanBoldTextView
                    style="@style/text_style_black_normal_20dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/activity_margin_10dp"
                    android:layout_weight="0.8"
                    android:gravity="center_vertical"
                    android:text="@string/manage_cars" />




            </LinearLayout>


        </android.support.v7.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.05" />

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.15"
            card_view:cardCornerRadius="10dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:id="@+id/ll_generate_reports"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:padding="@dimen/activity_margin_10dp"
                    android:src="@drawable/ic_generate_report" />

                <com.wondercars.ridetracker.CustomClasses.MuseosanBoldTextView
                    style="@style/text_style_black_normal_20dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/activity_margin_10dp"
                    android:layout_weight="0.8"
                    android:gravity="center_vertical"
                    android:text="@string/generate_reports" />


            </LinearLayout>


        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>
