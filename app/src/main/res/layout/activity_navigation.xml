<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#80dedede"
    android:weightSum="1"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="com.wondercars.ridetracker.Activity.NavigationActivity">

        <include
            layout="@layout/common_toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/activity_margin_10dp"
    android:weightSum="1">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"/>

    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        card_view:cardCornerRadius="10dp"
        android:background="@drawable/blue_rectangle_with_circular_corners"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <com.wondercars.ridetracker.CustomClasses.MuseosanBoldTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:text="@string/track_rides"
                android:layout_marginLeft="@dimen/activity_margin_10dp"
                android:gravity="center_vertical"
                style="@style/text_style_primaryColor_normal_20dp"
                />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="@dimen/activity_margin_10dp"
                android:layout_weight="0.2"
                android:src="@drawable/ic_chevron_right"/>

        </LinearLayout>



    </android.support.v7.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05"/>


    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        card_view:cardCornerRadius="10dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/ll_manage_executives"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <com.wondercars.ridetracker.CustomClasses.MuseosanBoldTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:layout_marginLeft="@dimen/activity_margin_10dp"
                android:gravity="center_vertical"
                android:text="@string/Manage_Executives"
                style="@style/text_style_primaryColor_normal_20dp"
                />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="@dimen/activity_margin_10dp"
                android:layout_weight="0.2"
                android:src="@drawable/ic_chevron_right"/>

        </LinearLayout>



    </android.support.v7.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05"/>

    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        card_view:cardCornerRadius="10dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/ll_manage_cars"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <com.wondercars.ridetracker.CustomClasses.MuseosanBoldTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:text="@string/manage_cars"
                android:layout_marginLeft="@dimen/activity_margin_10dp"
                android:gravity="center_vertical"
                style="@style/text_style_primaryColor_normal_20dp"
                />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="@dimen/activity_margin_10dp"
                android:layout_weight="0.2"
                android:src="@drawable/ic_chevron_right"/>

        </LinearLayout>



    </android.support.v7.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05"/>

    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        card_view:cardCornerRadius="10dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <com.wondercars.ridetracker.CustomClasses.MuseosanBoldTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:text="@string/generate_reports"
                android:layout_marginLeft="@dimen/activity_margin_10dp"
                android:gravity="center_vertical"
                style="@style/text_style_primaryColor_normal_20dp"
                />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="@dimen/activity_margin_10dp"
                android:layout_weight="0.2"
                android:src="@drawable/ic_chevron_right"/>

        </LinearLayout>



    </android.support.v7.widget.CardView>

</LinearLayout>

</LinearLayout>
