<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_marginLeft="@dimen/activity_margin_10dp"
    android:layout_marginRight="@dimen/activity_margin_10dp"
    android:layout_marginTop="@dimen/activity_margin_10dp"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="1">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <TableLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/activity_margin_5dp"
                android:layout_weight="0.9"
                android:orientation="vertical"
                android:weightSum="1">

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.2"
                    android:gravity="center_horizontal"
                    android:weightSum="1">

                    <TextView
                        style="@style/text_style_primaryColor_normal_16dp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="left|center_vertical"
                        android:text="Reg. Number" />

                    <TextView
                        android:id="@+id/tv_car_number"
                        style="@style/text_style_black_normal_14dp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="center_vertical"
                        android:textAllCaps="true" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.2"
                    android:gravity="center_horizontal"
                    android:weightSum="1">

                    <TextView
                        style="@style/text_style_primaryColor_normal_16dp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="left|center_vertical"
                        android:text="Fuel Type" />

                    <TextView
                        android:id="@+id/tv_car_fuel_type"
                        style="@style/text_style_black_normal_14dp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="center_vertical" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.2"
                    android:gravity="center_horizontal"
                    android:weightSum="1">

                    <TextView
                        style="@style/text_style_primaryColor_normal_16dp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="left|center_vertical"
                        android:text="Car Variant" />

                    <TextView
                        android:id="@+id/tv_car_variant"
                        style="@style/text_style_black_normal_14dp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="center_vertical" />

                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.2"
                    android:gravity="center_horizontal"
                    android:weightSum="1">

                    <TextView
                        style="@style/text_style_primaryColor_normal_16dp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="left|center_vertical"
                        android:text="Car Mode" />

                    <TextView
                        android:id="@+id/tv_car_mode"
                        style="@style/text_style_black_normal_14dp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="center_vertical" />

                </TableRow>


            </TableLayout>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.1"
                android:src="@drawable/ic_chevron_right" />


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
